---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import FormattedDate from '../components/FormattedDate.astro';
import MarkdownComponents from '../components/MarkdownComponents.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<BaseLayout
	title={title}
	description={description}
	articleType="article"
	publishDate={pubDate}
	modifiedDate={updatedDate}
	class="blog-post"
>
	<article>
		{heroImage && (
			<div class="hero-image">
				<Image
					width={1200}
					height={600}
					src={heroImage}
					alt={`Imagem do artigo: ${title}`}
					loading="eager"
					quality={85}
				/>
			</div>
		)}
		
		<header class="article-header">
			<div class="article-meta">
				<time datetime={pubDate.toISOString()}>
					<FormattedDate date={pubDate} />
				</time>
				{updatedDate && (
					<div class="updated-date">
						Atualizado em <FormattedDate date={updatedDate} />
					</div>
				)}
			</div>
			<h1 class="article-title">{title}</h1>
		</header>

		<div class="prose">
			<slot />
		</div>
	</article>
	<MarkdownComponents />
</BaseLayout>

<style>
	/* Hero Image */
	.hero-image {
		width: 100%;
		margin-bottom: var(--space-8);
		border-radius: var(--border-radius-2xl);
		overflow: hidden;
		box-shadow: var(--shadow-lg);
	}

	.hero-image img {
		width: 100%;
		height: auto;
		display: block;
		object-fit: cover;
	}

	/* Article Header */
	.article-header {
		text-align: center;
		margin-bottom: var(--space-8);
		padding-bottom: var(--space-6);
		border-bottom: var(--border-width-1) solid var(--color-neutral-200);
	}

	.article-meta {
		margin-bottom: var(--space-4);
		color: var(--color-neutral-600);
		font-size: var(--font-size-sm);
	}

	.updated-date {
		font-style: italic;
		margin-top: var(--space-1);
		color: var(--color-neutral-500);
	}

	.article-title {
		font-size: clamp(var(--font-size-3xl), 5vw, var(--font-size-5xl));
		color: var(--color-neutral-900);
		margin: 0;
		line-height: var(--line-height-tight);
		font-weight: var(--font-weight-extrabold);
	}

	/* Prose Styles - Otimizado para artigos */
	.prose {
		max-width: 800px;
		margin: 0 auto;
		font-size: var(--font-size-lg);
		line-height: var(--line-height-relaxed);
		color: var(--color-neutral-800);
	}

	/* Títulos no conteúdo */
	.prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
		margin: var(--space-8) 0 var(--space-4) 0;
		color: var(--color-neutral-900);
		font-weight: var(--font-weight-bold);
		line-height: var(--line-height-tight);
	}

	.prose h1 {
		font-size: var(--font-size-4xl);
		border-bottom: var(--border-width-2) solid var(--color-primary-500);
		padding-bottom: var(--space-2);
	}

	.prose h2 {
		font-size: var(--font-size-3xl);
		border-bottom: var(--border-width-1) solid var(--color-neutral-300);
		padding-bottom: var(--space-1);
	}

	.prose h3 { font-size: var(--font-size-2xl); }
	.prose h4 { font-size: var(--font-size-xl); }
	.prose h5 { font-size: var(--font-size-lg); }
	.prose h6 { font-size: var(--font-size-base); font-weight: var(--font-weight-semibold); }

	/* Parágrafos */
	.prose p {
		margin: var(--space-6) 0;
		line-height: var(--line-height-relaxed);
	}

	/* Listas */
	.prose ul, .prose ol {
		margin: var(--space-6) 0;
		padding-left: var(--space-6);
	}

	.prose ul {
		list-style: none;
	}

	.prose ul li {
		position: relative;
		margin: var(--space-2) 0;
	}

	.prose ul li::before {
		content: "•";
		color: var(--color-primary-500);
		font-weight: var(--font-weight-bold);
		position: absolute;
		left: calc(-1 * var(--space-6));
		font-size: 1.2em;
	}

	.prose ol {
		list-style: decimal;
	}

	.prose li {
		margin: var(--space-2) 0;
	}

	/* Código e Pré-formatação */
	.prose code {
		background: var(--color-neutral-100);
		color: var(--color-primary-700);
		padding: var(--space-1) var(--space-2);
		border-radius: var(--border-radius-base);
		font-family: var(--font-family-mono);
		font-size: 0.9em;
		font-weight: var(--font-weight-medium);
	}

	.prose pre {
		background: var(--color-neutral-900);
		color: var(--color-neutral-100);
		padding: var(--space-6);
		border-radius: var(--border-radius-xl);
		overflow-x: auto;
		margin: var(--space-8) 0;
		box-shadow: var(--shadow-lg);
	}

	.prose pre code {
		background: transparent;
		color: inherit;
		padding: 0;
		border-radius: 0;
	}

	/* Citações */
	.prose blockquote {
		border-left: var(--border-width-4) solid var(--color-neutral-400);
		padding: var(--space-4) var(--space-6);
		margin: var(--space-8) 0;
		background: var(--color-primary-50);
		border-radius: 0 var(--border-radius-xl) var(--border-radius-xl) 0;
		font-style: italic;
		font-size: var(--font-size-xl);
		color: var(--color-neutral-700);
		position: relative;
	}

	.prose blockquote p {
		margin: 0;
	}

	.prose blockquote::before {
		content: """;
		font-size: 4rem;
		color: var(--color-primary-300);
		position: absolute;
		left: var(--space-4);
		top: calc(-1 * var(--space-2));
		line-height: 1;
		opacity: 0.7;
	}

	/* Tabelas */
	.prose table {
		width: 100%;
		border-collapse: collapse;
		margin: var(--space-8) 0;
		border-radius: var(--border-radius-lg);
		overflow: hidden;
		box-shadow: var(--shadow-md);
	}

	.prose table th {
		background: var(--color-primary-600);
		color: white;
		padding: var(--space-3) var(--space-4);
		font-weight: var(--font-weight-semibold);
		text-align: left;
	}

	.prose table td {
		padding: var(--space-3) var(--space-4);
		border-bottom: var(--border-width-1) solid var(--color-neutral-200);
	}

	.prose table tbody tr:hover {
		background: var(--color-neutral-50);
	}

	.prose table tbody tr:nth-child(even) {
		background: var(--color-neutral-25);
	}

	/* Separadores */
	.prose hr {
		border: none;
		height: var(--border-width-2);
		background: linear-gradient(
			90deg,
			transparent,
			var(--color-primary-400),
			transparent
		);
		margin: var(--space-12) 0;
		border-radius: var(--border-radius-full);
	}

	/* Imagens no conteúdo */
	.prose img {
		max-width: 100%;
		height: auto;
		border-radius: var(--border-radius-lg);
		box-shadow: var(--shadow-md);
		margin: var(--space-8) auto;
		display: block;
	}

	/* Captions para imagens */
	.prose img + em {
		display: block;
		text-align: center;
		font-size: var(--font-size-sm);
		color: var(--color-neutral-600);
		margin-top: calc(-1 * var(--space-6));
		margin-bottom: var(--space-8);
		font-style: normal;
	}

	/* Modo escuro */
	@media (prefers-color-scheme: dark) {
		.article-header {
			border-bottom-color: var(--color-neutral-300);
		}

		.article-meta {
			color: var(--color-neutral-600);
		}

		.updated-date {
			color: var(--color-neutral-500);
		}

		.article-title {
			color: var(--color-neutral-900);
		}

		.prose {
			color: var(--color-neutral-800);
		}

		.prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
			color: var(--color-neutral-900);
		}

		.prose h2 {
			border-bottom-color: var(--color-neutral-400);
		}

		.prose code {
			background: var(--color-neutral-200);
			color: var(--color-primary-600);
		}

		.prose blockquote {
			background: var(--color-neutral-700);
			color: var(--color-neutral-500);
			border-left-color: var(--color-neutral-500);
		}

		.prose blockquote strong,
		.prose blockquote b {
			color: var(--color-neutral-50);
		}

		.prose blockquote::before {
			color: var(--color-primary-300);
		}

		.prose table tbody tr:hover {
			background: var(--color-neutral-200);
		}

		.prose table tbody tr:nth-child(even) {
			background: var(--color-neutral-150);
		}

		.prose img + em {
			color: var(--color-neutral-600);
		}
	}

	/* Responsividade */
	@media (max-width: 768px) {
		.hero-image {
			margin-bottom: var(--space-6);
			border-radius: var(--border-radius-xl);
		}

		.article-header {
			margin-bottom: var(--space-6);
			padding-bottom: var(--space-4);
		}

		.prose {
			font-size: var(--font-size-base);
		}

		.prose h1 { font-size: var(--font-size-3xl); }
		.prose h2 { font-size: var(--font-size-2xl); }
		.prose h3 { font-size: var(--font-size-xl); }

		.prose ul, .prose ol {
			padding-left: var(--space-4);
		}

		.prose blockquote {
			font-size: var(--font-size-lg);
			padding: var(--space-3) var(--space-4);
		}

		.prose table {
			font-size: var(--font-size-sm);
		}

		.prose table th,
		.prose table td {
			padding: var(--space-2) var(--space-3);
		}
	}
</style>
